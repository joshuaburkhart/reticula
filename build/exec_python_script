FROM ubuntu:latest
LABEL contact="burkhajo@ohsu.edu"
RUN apt-get update &&\
 apt-get -y install python3-pip &&\
 pip3 install numpy scipy pandas matplotlib &&\
 mkdir -p /reticula/code /reticula/data
ADD ./executable.py /reticula/code/
ENTRYPOINT exec python3 /reticula/code/executable.py -verbose -file_name ~/WuLab/WuLabLustreDir/reticula/data/input/
